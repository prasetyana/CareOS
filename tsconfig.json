{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@core/*": [
        "./src/core/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@ui/*": [
        "./src/ui/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}